<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/root_framelayout"
    android:background="?android:windowBackground">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"></View>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_to_planroute"
        android:hint="Choose a Start ..."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_choose_onfield"
        android:layout_gravity="center_horizontal"
        android:text="OK"
        android:layout_marginTop="8dp"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"></View>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_choose_onmap"
        android:layout_gravity="center_horizontal"
        android:text="Choose on Map..."
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Current Location"
        android:id="@+id/button_choose_current"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearl_choose_onmap"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose On Map"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearl_current_location"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Current Location:"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textSize="16sp"/>


        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="41,458749/ 2,203144"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>



</LinearLayout>

</FrameLayout>